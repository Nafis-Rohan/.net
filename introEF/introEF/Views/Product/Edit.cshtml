
@{
    ViewBag.Title = "Edit";
}


<h2>Edit</h2>

<form method="post">
    <input type="hidden" name="ProdcutId" value="@Model.ProdcutId" />
    <input type="text" class="form-control" value="@Model.Name" placeholder="Name" name="Name" />
    <input type="text" class="form-control" value="@Model.Price" placeholder="Price" name="Price" />
    <input type="text" class="form-control" value="@Model.Quantity" placeholder="Quantity" name="Quantity" />
    <input type="text" class="form-control" value="@Model.Description" placeholder="Description" name="Description" />
    <input type="submit" class="btn btn-danger" value="Update" />

</form>