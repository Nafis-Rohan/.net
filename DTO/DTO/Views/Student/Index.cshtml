
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Model.Count != 0)
{
      <table class="table table-bordered">
          <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Cgpa</th>
              <th>Dob</th>
          </tr>


          @foreach (var item in Model)
          {
           <tr>
              <td>@item.sId</td>
              <td>@item.name</td>
              <td>@item.Cgpa</td>
              <td>@item.Dob</td>
               <td>
                   <a href="/Student/edit/@item.Id"> Edit </a>
               </td>
           </tr>
          }
      </table>

}
else { 
    <h5 class="text-bg-danger"> NO data</h5>
}

