
@{
    ViewBag.Title = "SelectCourse";
}

<h2>SelectCourse</h2>

@if (Model.Count != 0)
{
    <form method="post">
        <h4>Select Courses</h4>
        @foreach (var item in Model)
        {

            @item.Name @item.Credit <input type="checkbox" name="Courses[]" value="@item.Id" /> <br />

        }
        <input type="submit" value="Register" class="btn btn-primary" />
    </form>

}
else
{
    <h5 class="text-bg-danger">no courses</h5>
}


