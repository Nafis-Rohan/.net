@{
    ViewBag.Title = "Open";

}

@foreach (var item in Model)
{
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Start Date</th>
            <th>Compution Date</th>
            <th>Status</th>
        </tr>
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.StartDate</td>
            <td>@item.ComputionDate</td>
            @{
                ProjectManagement2_Legit_.Enums.ProjectStatus status = (ProjectManagement2_Legit_.Enums.ProjectStatus)item.StatusId;
            }
            <td>@status.ToString()</td>
            <td>
                <form  action="/Supervisor/OpenDetails">
                    <input type="hidden" name="id" value="@item.Id" />
                    <button type="submit" class="btn btn-primary">Open</button>
                </form>
            </td>

        </tr>
    </table>
    <br />
    <br />
}
